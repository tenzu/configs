#!/bin/bash

if [ $# -ne 1 ]; then
    echo "Please input path."
    exit 1
fi

path=$1

if [ ! -d $path ]; then
    echo "Path does not exist."
    exit 1
fi

for dir in $(find $path -maxdepth 1 -type d); do                         
    if [ $dir != $path ]; then
        size=$(du -sh $dir | awk '{print $1}')
        echo -e "Size: $size\tFolder: $dir"
    fi  
done
