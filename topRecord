#!/bin/bash
cores=`cat /proc/cpuinfo | grep "processor" | sort | uniq | wc -l`
date
echo -e "USER \t \t %CPU"
top -n 1 -b | grep $1 | awk '{if($9!="0.0") print $2 "\t" $9}' | head -$cores
echo "----------------"
echo "total cpu used: $(top -n 1 -b | grep $1 | awk '{if($9!="0.0") print $9}' | head -$cores | awk '{sum += $1};END {print sum}')"
